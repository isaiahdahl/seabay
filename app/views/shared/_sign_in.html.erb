<div class="form">
  <div class="text-center">
    <h4 class="text-center">Sign in</h4>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: "Email", required: false, autofocus: true %>
        <%= f.input :password, label: false, placeholder: "Password", required: false %>
        <%= f.input :remember_me, inner_html: { class: 'Remember' }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-block" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>