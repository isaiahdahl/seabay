<%= render "shared/banner" %>



<section id="services">
  <div class="container">
    <div class="row">
      <div id="header" class="col-lg-12 text-center">
        <h2 class="section-heading">How it works</h2>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-4 text-center">
        <div id="icon-1"class="service-box mt-5 mx-auto">
          <%= image_tag "list.png", class: "home-icon" %>
          <p class="text-muted home-description">Restaurants create their list of fish needed for the day</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 text-center">
        <div id="icon-2"class="service-box mt-5 mx-auto">
          <%= image_tag "fish.png", class: "home-icon" %>
          <p class="text-muted home-description">Fishermen post their daily catch and find restaurants that match what they caught</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 text-center">
        <div id="icon-3"class="service-box mt-5 mx-auto">
          <%= image_tag "envelope.png", class: "home-icon" %>
          <p class="text-muted home-description">When there is a match, fishermen can contact restaurants and make a sale</p>
        </div>
      </div>

    </div>
  </div>
</section>

<div class="resto-banner" style="background-color: #E3F3F2" >
  <div id="resto-content" class="banner-content">
    <h1 class="headline">Owner of a Seafood Restaurant?</h1>
    <button class="btn-solid" data-toggle="modal" data-target="#modalSignUp">SIGN UP</button>
  </div>
</div>


