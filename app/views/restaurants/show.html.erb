
<div class="top-container">
  <div class="top-container-left">
    <div class="description">
      <h2><%= @restaurant.name %></h2>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.phone_number %></p>
      <p><%= @restaurant.email %></p>
    </div>

  </div>
  <div class="top-container-right">
    <div class="banner">
      <%= image_tag @restaurant.img_url %>
    </div>
  </div>
</div>

<div class="bottom-container">
  <div class="bottom-container-left">
    <div class="fish-cards">
      <% @restaurant.fish_orders.each do |order| %>
      <div class="fish-card">
        <div class="fish-card-info">
          <h4><%= order.fish.name %></h4>
          <p><%= order.weight_in_grams %> kg</p>
        </div>
        <div class="fish-card-exit">
          <span class="plus-minus"><%= link_to image_tag("delete-icon.png", border: 0, class: "icon"), fish_order_path(order.id), method: :delete, data: {confirm: "Delete this order?"} %></span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="bottom-container-right">
    <div class="checkout">
      <%= simple_form_for [@restaurant, @fishorder], :url => email_order_restaurant_path do |f| %>
        <% @restaurant.fish_orders.each do |order| %>
          <div class="checkout-form-inputs">
            <%= f.input :weight_in_grams, label: false, collection: (1..order.weight_in_grams).to_a, selected: order.weight_in_grams %>
            <p>kg of <%= order.fish.name %></p>
          </div>
        <% end %>
      <%= f.submit value: "Email Restaurant", class: "btn-solid" %>
      <% end %>
    </div>
  </div>
</div>

